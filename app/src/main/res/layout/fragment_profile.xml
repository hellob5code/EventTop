<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.develop.app.eventtop.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/user_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="تغيير"
        android:textSize="20sp"
        android:textColor="@color/endColor"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:drawableTint="@color/endColor"
        android:drawablePadding="6dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/user_photo"
        android:drawableEnd="@drawable/ic_person_outline"
        tools:targetApi="m" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_text"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="معلومات شخصية"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/customGrey"
                android:layout_below="@+id/row1"/>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/title12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/title11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="الاسم الكامل"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/title22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/title21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="اسم المستخدم"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/title32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/title31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="البريد الالكتروني"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row4"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/title42"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/title41"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="رقم الهاتف"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingRight="10dp"
                    android:textDirection="anyRtl"
                    tools:targetApi="jelly_bean_mr1"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
